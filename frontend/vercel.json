{
  "version": 2,
  "headers": [
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|map|woff2?)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://yupify-reworked.onrender.com/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://yupify-reworked.onrender.com/health"
    },
    {
      "source": "/:path*",
      "has": [
        { "type": "header", "key": "accept", "value": "text/html.*" }
      ],
      "destination": "/index.html"
    }
  ]
}
