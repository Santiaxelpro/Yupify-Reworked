{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev:tauri-frontend",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Yupify",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.yupify.app",
      "icon": ["icons/icon.ico"]
    },
    "allowlist": {
      "all": false
    },
    "windows": [
      {
        "title": "Yupify",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
