{
  "appId": "com.yupify.app",
  "productName": "Yupify",
  "files": [
    "electron-main.js",
    "electron-preload.js",
    "frontend/dist/**/*",
    "node_modules/**/*"
  ],
  "directories": {
    "buildResources": "frontend/public"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "frontend/public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "frontend/public/favicon.ico"
  }
}
